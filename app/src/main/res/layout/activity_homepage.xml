<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomepageActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredoka_one"
            android:textSize="@dimen/_40sdp"
            android:textStyle="bold"
            android:text="OV"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredoka_one"
            android:textSize="@dimen/_40sdp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="ERVI"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredoka_one"
            android:textSize="@dimen/_40sdp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent3"
            android:text="EW"/>
    </LinearLayout>


    <TextView
        android:layout_marginTop="@dimen/_15sdp"
        android:id="@+id/tv_current_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text = "Month"
        android:fontFamily="@font/fredoka_one"
        android:gravity="center"
        android:textSize="@dimen/_30sdp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"/>

    <ImageView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:src="@drawable/ic_over_view"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredoka_one"
            android:textSize="@dimen/_40sdp"
            android:textStyle="bold"
            android:text="SU"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredoka_one"
            android:textSize="@dimen/_40sdp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="MMA"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredoka_one"
            android:textSize="@dimen/_40sdp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent3"
            android:text="RY"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:weightSum="2">



        <TextView
            android:id="@+id/tv_home_total_expenses"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredoka_one"
            android:gravity="center_horizontal"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            tools:text="Total Expense 0.0" />
        <TextView
            android:id="@+id/tv_home_total_income"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text = "Total Income 0.0"
            android:fontFamily="@font/fredoka_one"
            android:gravity="center_horizontal"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:weightSum="2">

        <TextView
            android:id="@+id/tv_home_total_bills"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text = "Total Bills 0.0"
            android:fontFamily="@font/fredoka_one"
            android:gravity="center_horizontal"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_home_total_savings"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text = "Total Savings 0.0"
            android:fontFamily="@font/fredoka_one"
            android:gravity="center_horizontal"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/fredoka_one"
            android:text="     EXPENSE"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/fredoka_one"
            android:text="     INCOME"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/fredoka_one"
            android:text="     PROFILE"
            android:textSize="@dimen/_15sdp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_60sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_75sdp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardCornerRadius="@dimen/_5sdp">
            <ImageView
                android:id="@+id/btn_add_expense"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_dollar"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_75sdp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardCornerRadius="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp">
            <ImageView
                android:id="@+id/btn_add_income"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_euro" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_75sdp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardCornerRadius="@dimen/_5sdp">
            <ImageView
                android:id="@+id/btn_your_profile"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_worker"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>