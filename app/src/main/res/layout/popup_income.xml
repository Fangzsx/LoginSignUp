<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp">

        <TextView
            android:fontFamily="@font/fredoka_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please select an action"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15sdp"
            android:gravity="center_horizontal"
            />


    </LinearLayout>


    <LinearLayout
        android:paddingLeft="@dimen/_10sdp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_income_show_date"
            android:fontFamily="@font/fredoka_one"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: "
            android:textSize="@dimen/_8sdp"/>

        <TextView
            android:id="@+id/tv_income_edit_date"
            android:layout_width="@dimen/_65sdp"
            android:textSize="@dimen/_8sdp"
            android:fontFamily="@font/fredoka_one"
            android:layout_height="wrap_content"
            tools:text="YYYY-MM-DD" />

    </LinearLayout>
    <LinearLayout
        android:paddingLeft="@dimen/_10sdp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: "
            android:fontFamily="@font/fredoka_one"
            android:textSize="@dimen/_8sdp"/>

        <TextView
            android:fontFamily="@font/fredoka_one"
            android:id="@+id/tv_income_edit_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Some text here"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bills: "
            android:fontFamily="@font/fredoka_one"
            android:textSize="@dimen/_8sdp"/>


        <TextView
            android:fontFamily="@font/fredoka_one"
            android:id="@+id/tv_income_edit_bills"
            android:layout_width="wrap_content"
            android:textSize="@dimen/_8sdp"
            android:layout_height="wrap_content"
            tools:text="9999999"/>


    </LinearLayout>
    <LinearLayout
        android:paddingLeft="@dimen/_10sdp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Savings: "
            android:fontFamily="@font/fredoka_one"
            android:textSize="@dimen/_8sdp"/>


        <TextView
            android:fontFamily="@font/fredoka_one"
            android:id="@+id/tv_income_edit_savings"
            android:layout_width="wrap_content"
            android:textSize="@dimen/_8sdp"
            android:layout_height="wrap_content"
            tools:text="9999999"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: "
            android:fontFamily="@font/fredoka_one"
            android:textSize="@dimen/_8sdp"/>

        <TextView
            android:fontFamily="@font/fredoka_one"
            android:id="@+id/tv_income_edit_total_income"
            android:layout_width="wrap_content"
            android:textSize="@dimen/_8sdp"
            android:layout_height="wrap_content"
            tools:text="9999999"/>


    </LinearLayout>





    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_20sdp">

        <Button
            android:id="@+id/btn_remove_income"
            android:padding="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REMOVE"
            android:background="@drawable/round_button_no"
            android:fontFamily="@font/fredoka_one"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/_20sdp"/>

    </LinearLayout>








</LinearLayout>